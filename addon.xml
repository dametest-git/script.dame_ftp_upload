<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.dame_ftp_upload" name="Dame FTP Upload" version="1.0.0" provider-name="dame">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.service" library="service.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Upload EPG XML files to FTP by mask</summary>
    <description>Monitors special://userdata/addon_data for epg*.xml and uploads changed to FTP.</description>
    <platform>all</platform>
  </extension>
</addon>
